<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mgjr.share.PagerSlidingTabStrip
        android:id="@+id/pager_sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        pts:pstsDividerColor="@android:color/transparent"
        pts:pstsIndicatorColor="#ffa800"
        pts:pstsIndicatorHeight="2dp"
        pts:pstsShouldExpand="true"
        pts:pstsTabBackground="@android:color/transparent"
        pts:zmsSelectedTabTextSize="16sp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_profile_message_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
