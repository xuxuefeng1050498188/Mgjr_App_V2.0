<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context="com.mgjr.view.profile.accountsetting.ProfileAccountSettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.mgjr.Utils.ClearEditText
            android:id="@+id/et_newmobile"
            style="@style/profile_edittext_style"
            android:layout_marginRight="40dp"
            android:hint="请输入新手机号码" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.mgjr.Utils.ClearEditText
            android:id="@+id/et_smscode"
            style="@style/profile_edittext_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:hint="请输入验证码" />

        <Button
            android:id="@+id/btn_getsmscode"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_invest_list_item_blue_rectangle"
            android:padding="8dp"
            android:text="获取验证码"
            android:textColor="#72CAF4" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更换号码后，下次登录请使用新手机号码"
            android:textColor="#666666"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/shape_profile_confirm_orange_bg"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="提 交"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>
