<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_repacket_childview_invest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="16dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_redpacket_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_select_hb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/agreement_logo" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp">

            <LinearLayout
                android:id="@+id/ll_unuseable_bg"
                android:layout_width="wrap_content"
                android:layout_height="122dp"
                android:layout_gravity="right"
                android:background="@drawable/bg_redpackets_invest"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_activity_gift_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="13dp"
                            android:text="投资红包"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/tv_redpackets_canuse_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:text="单笔投资≥1000元\n(活期宝,及特殊有说明的项目除外)"
                            android:textColor="@android:color/white"
                            android:textSize="11sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_redpackets_canuse_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:paddingLeft="8dp"
                            android:text="50元"
                            android:textColor="@android:color/white"
                            android:textSize="28sp" />

                        <TextView
                            android:id="@+id/tv_gife_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年化收益"
                            android:textColor="#31aae3"
                            android:textSize="11sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_redpackets_canuse_period"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>