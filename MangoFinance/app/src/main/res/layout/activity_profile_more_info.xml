<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context="com.mgjr.view.profile.accountsetting.ProfileAccountSettingActivity">

    <!--logo区域-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:gravity="center_vertical">


        <com.mgjr.share.CircleImageView
            android:id="@+id/civ_user_portrait"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_user_portrait"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="芒果金融 V2.0.0"
            android:textColor="#666"
            android:textSize="12dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <!--有新版本可以更新的布局-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#fff"
            android:onClick="checkUpdate">

            <TextView
                android:id="@+id/iv_profile_check_for_updates"
                style="@style/profile_setting_font"
                android:text="检查更新" />

            <ImageView
                android:id="@+id/red_imageview"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:layout_toRightOf="@id/iv_profile_check_for_updates"
                android:background="@drawable/red_point_logo" />

            <TextView
                android:id="@+id/update_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:gravity="right"
                android:text="有新版本可以更新"
                android:visibility="gone"
                android:textColor="#ffb126"
                android:textSize="12sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="23dp"
                android:background="@drawable/invest_record_right_arrow" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"/>
        <!--没有新版本的布局-->

        <!--<RelativeLayout-->
