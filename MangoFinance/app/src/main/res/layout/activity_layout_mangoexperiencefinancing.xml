<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_myhqb_have_income"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="@drawable/bg_tyj_top"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout_myjmg_waitincome"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mgtyj_waitincome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="累计收益(元)"
                android:textColor="#77ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_tyj_balance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="体验金余额(元)"
                    android:textColor="#77ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_tyj_balance"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#99ffffff"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_tyj_allbalance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="累计体验金(元)"
                    android:textColor="#77ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_tyj_all"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#99ffffff"
                    android:textSize="19sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#feaa00" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:text="投资记录"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f0f0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_tyj_invest"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:background="#f7a123"
            android:text="投  资"
            android:textColor="#ffffff"
            android:textSize="18sp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_tyj_invest"
            android:layout_alignParentTop="true"
            android:background="#f0f0f0"
            android:gravity="top">

            <ListView
                android:id="@+id/lv_mangotyj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#f0f0f0"
                android:background="#ffffff"
                android:dividerHeight="10dp">

            </ListView>

            <LinearLayout
                android:id="@+id/list_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:gravity="center|top"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/img_notender_list" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="暂无投资记录" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>