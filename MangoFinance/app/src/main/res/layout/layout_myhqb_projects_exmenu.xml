<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center">

            <TextView
                android:id="@+id/tvbtn_mybqb_projects_exmenu_running"
                android:layout_width="170dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_capitaildetails_title"
                android:gravity="center"
                android:text="持有中项目"
                android:textColor="#feaa00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center">

            <TextView
                android:id="@+id/tvbtn_mybqb_projects_exmenu_redeemed"
                android:layout_width="170dp"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_capitaildetails_btn"
                android:gravity="center"
                android:text="已赎回项目"
                android:textColor="@color/tab_text_normal_color" />
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#77000000"/>

</LinearLayout>
