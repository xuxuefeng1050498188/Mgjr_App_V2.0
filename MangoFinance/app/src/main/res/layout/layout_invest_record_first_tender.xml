<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_first_tender_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_invest_record">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#dbf1ff"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_invest_record_tenderKing_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="narry"
                android:textColor="#666"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_invest_record_tenderKing"
                android:layout_width="70dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/invest_record_biaowang_bg" />

            <TextView
                android:id="@+id/tv_invest_record_tenderKing_amount"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_invest_record_item_blue_rectangle"
                android:gravity="center"
                android:text="¥ 30.00 万"
                android:textColor="#1fa6eb"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_invest_record_firstTender_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="137****6666"
                android:textColor="#666"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_invest_record_firstTender"
                android:layout_width="70dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/invest_record_shoubiao_bg" />

            <TextView
                android:id="@+id/tv_invest_record_firstTender_time"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_invest_record_item_blue_rectangle"
                android:ellipsize="middle"
                android:gravity="center"
                android:text="3秒抢到"
                android:textColor="#1fa6eb"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>
</FrameLayout>