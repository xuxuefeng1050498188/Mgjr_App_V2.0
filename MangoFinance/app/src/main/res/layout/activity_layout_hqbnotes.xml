<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/regular_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buyNotes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="#feaa00"
            android:text="买入须知" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#f0f0f0" />

        <TextView
            android:id="@+id/tv_redeemNotes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="赎回须知" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="right">

            <ImageView
                android:id="@+id/img_indicator_left"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:background="#feaa00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_indicator_right"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_gravity="left"
                android:background="#feaa00"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/regular_divider_line"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_hqbnotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>