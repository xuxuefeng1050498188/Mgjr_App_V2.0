<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_invest_light_gray_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/invest_demand_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/newuser_titletext_item_listview_invest"
                android:textScaleX="1.01"
                android:text="活期宝" />

            <TextView
                style="@style/newuser_secondtext_item_listview_invest"
                android:layout_width="150dp"
                android:layout_height="21dp"
                android:layout_marginTop="8dp"
                android:text="懒人理财专享" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预测年化收益"
                    android:textColor="#393939"
                    android:textScaleX="1.01"
                    android:textSize="12dp"
                    android:id="@+id/textView3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rate_invest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="7~11"
                        android:textColor="#F4821D"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="#F4821D"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="8dp"
                android:background="#E0F3FF"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="23dp"
                    android:background="@drawable/shape_invest_list_item_blue_rectangle"
                    android:gravity="center"
                    android:text="灵活存取"
                    android:textColor="#72CAF4"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_invest_list_item_blue_rectangle"
                    android:gravity="center"
                    android:text="逐月加息 最高11%"
                    android:textColor="#72CAF4"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_invest_list_item_blue_rectangle"
                    android:gravity="center"
                    android:text="1元起投"
                    android:textColor="#72CAF4"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>