<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f0f0f0" />
    <!--银行-->
    <LinearLayout
        android:id="@+id/ll_binded_bankcard"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weixin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sms_bankname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="建设银行(2500)"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_sms_username"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center|top"
                android:text="持卡人:‘‘周’'"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f0f0f0" />
    <!--充值金额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="金额"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_sms_recharge_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:hint="1000"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="元"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_phone" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_sms_phonenumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLength="11"
                android:layout_height="match_parent"
                android:textCursorDrawable="@null"
                android:inputType="number"
                android:layout_marginLeft="30dp"
                android:background="@null"
                android:textSize="13sp"
                android:hint="请输入银行预留手机号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_pwd" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_sms_smscode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:inputType="number"
                android:maxLength="6"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textSize="13sp"
                android:hint="请输入手机验证码" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btn_sms_getsmscode"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_getsmscodebtn_recharge"
                android:textColor="#00a1ea"
                android:textSize="13sp"
                android:text="获取验证码"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f0f0f0"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_sms_recharge"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_btn"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:text="充   值"/>



    </LinearLayout>
</LinearLayout>