<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context="com.mgjr.view.profile.accountsetting.ProfileAccountSettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/rl_bindPhone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/profile_setting_font"
                android:text="手机绑定" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="188****8888"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/invest_record_right_arrow" />
        </LinearLayout>

        <include layout="@layout/regular_divider_line" />

        <LinearLayout
            android:id="@+id/rl_bind_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#fff"
            android:clickable="true"
            android:gravity="center_vertical">

            <TextView
                style="@style/profile_setting_font"
                android:text="邮箱绑定" />

            <TextView
                android:id="@+id/tv_bind_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="未绑定"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_bind_mail_box_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/invest_record_right_arrow" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
